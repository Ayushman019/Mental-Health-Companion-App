<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.summerproject">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:label="internship"
        android:icon="@mipmap/ic_launcher">

        <meta-data
            android:name="com.google.firebase.database.database_url"
            android:value="https://moodtracker-74086-default-rtdb.asia-southeast1.firebasedatabase.app/" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/white" />
        <meta-data
            android:name="com.google.android.gms.auth.api.fitness.CLIENT_ID"
            android:value="@string/default_web_client_id" />

        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:windowSoftInputMode="adjustResize"
            android:hardwareAccelerated="true"
            android:configChanges="orientation|screenSize|keyboardHidden|screenLayout|density|uiMode">

            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.BODY_SENSORS" />
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>
